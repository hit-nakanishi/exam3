<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <h2>ロック解除メールの再送信</h2>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_messages! %>
      
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="actions">
        <%= f.submit "ロック解除メールの再送信", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>