<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    
    <h2>以下の内容で、送信する。</h2>

    <%= form_for(@topic) do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <h4>タイトル:<strong><%= @topic.title %></strong></h4>
      <p>本文:<%= @topic.content %></p>
      <p>ユーザID :<%= @topic.user_id %></p>
      <p>【ユーザ名 :】<%= @topic.user.name %></p>

      <%= f.submit "投稿",class: 'btn btn-primary btn-block' %>

    <% end %>

    <%= form_for(@topic, url: topics_topics_path, method: 'post') do |f| %>

      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
      
    <% end %>
    
  </div>
</div>