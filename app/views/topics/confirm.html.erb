<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    
    <%= form_for(@topic) do |f| %>
      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <p<strong>内容:<%= @topic.content %></strong></p>
      <p><%= @topic.user.name %></p>

      <%= f.submit "投稿",class: 'btn btn-primary btn-block' %>

    <% end %>

    <%= form_for(@topic, url: topics_topics_path, method: 'post') do |f| %>

      <%= f.hidden_field :content %>
      <%= f.hidden_field :user_id %>

      <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
      
    <% end %>
    
  </div>
</div>