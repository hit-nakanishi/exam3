<%= form_for(@topic, url: choose_new_or_edit) do |f| %>

  <%= f.error_messages! %>

  <%= f.text_field :content, class: 'form-control', placeholder: "トピック" %><br>
  <%= f.hidden_field :user_id, :value => @topic.user_id %>

  <div class="prof-img">
    <p><%= profile_img(@topic.user) if profile_img(@topic.user) %></p>
  </div>
  <p><%= @topic.user.name %></p>


  <%= f.submit '内容確認', class: 'btn btn-primary btn-block' %>

<% end %>