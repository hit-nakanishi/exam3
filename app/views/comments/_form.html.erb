<%= form_for [comment.topic, comment], remote: true do |f| %>
  <%= f.hidden_field :topic_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit 'コメントを投稿', class: "btn btn-primary" %>
  </div>
<% end %>