<%= link_to user_notifications_path(current_user),
    class: 'dropdown-toggle', data: { toggle: 'dropdown' }, role: 'button', aria: { haspopup: 'true', expanded: 'false' } do %>

  <div id="unreadcount">
    <% if @notifications_count > 0 %>
      <%= @notifications_count %>
    <% end %>
  </div>
  <div id="getcomment"></div>

  <i class="fa fa-comments-o"><div id="messagelog"></div></i>
  <span class="caret"></span>
<% end %>

<ul class="dropdown-menu">
  <div class="notification"><%= render 'notifications/index', notifications: @notifications %></div>
  <li><%= link_to 'お知らせ一覧', user_notifications_path(current_user) %></li>
</ul>