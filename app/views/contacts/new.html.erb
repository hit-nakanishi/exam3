<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

  <h1>お問い合わせ</h1>

    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>

      <%= f.error_messages! %>

      <%= f.text_field :name, class: 'form-control', placeholder: "お名前" %><br>
      <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス" %><br>
      <%= f.text_area :content, class: 'form-control', placeholder: "お問い合わせ内容" %><br>
      <%= f.submit "内容確認", class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>