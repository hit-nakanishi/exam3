<div class='notifications-index'>
  <li>
    <% if @notifications_count > 0 %>
      <% @notifications.each do |notification| %>
        <% unless notification.read %>
          
          <div class="unread">
            <% if notification.comment_id? %>
              <span class='label label-pill label-warning'>未読</span>
              <small class='dropdown'>「<%= notification.comment.topic.content.truncate(20) %>」に<%= receive_user(notification) %> さんがコメントしました。</small>
          
              <p class='palette-paragraph text-right'>
                <small class='dropdown'>
                  <i class='fa fa-clock-o'></i>&ensp;<%= posted_time(notification.created_at) %>
                </small>
              </p>
            <% elsif notification.message_id? %>
              <span class='label label-pill label-warning'>未読</span>
              <small class='dropdown'><%= receive_user(notification) %>さんからメッセージが届いています。</small>
          
              <p class='palette-paragraph text-right'>
                <small class='dropdown'>
                  <i class='fa fa-envelope-o'></i>&ensp;<%= posted_time(notification.created_at) %>
                </small>
              </p>
            <% end %>
          </div>
          
        <% end %> <!-- unless notification.read -->
      <% end %> <!-- @notification.each do -->
    <% end %> <!-- if @notification.. -->
  </li>
</div>